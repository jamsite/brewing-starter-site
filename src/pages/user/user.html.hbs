---
[route]
collection = "{{users}}"
path = "{{this.id}}.html"
rewrite = "{{this.id}}/details"

[data]
meta_title = "{{this.name}}"
user = "{{this}}"
id = "{{this.id}}"
name = "{{this.name}}"
---
{{#> layout-default}}
<p>Hello from user page

<pre>
id: {{id}}
name: {{name}}
user.id: {{user.id}}
user.name: {{user.name}}
</pre>
this: {{{_inspect this}}}
{{/layout-default}}
